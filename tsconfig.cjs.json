  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["ESNext"],
    "types": ["node", "@types/node", "@types/jest"],
    "outDir": "dist/cjs"
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"]
}

